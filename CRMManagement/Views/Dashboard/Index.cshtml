    @using CRMManagement.Common;
@using CRMManagement.Pages;
@using CRMManagement.Infrastructure;
@using CRMManagement.Entities.V1;
@Html.AntiForgeryToken()

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .widget-thumb-icon{
        width:auto !important;
    }
</style>
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <span class="active" href="#">Dashboard</span>
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->
        <!-- BEGIN PAGE BASE CONTENT -->
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="portlet light bordered">
                            <div class="portlet-title">
                                <div class="row widget-row mt-3">
                                    <div class="col-md-4">
                                        <!-- BEGIN WIDGET THUMB -->
                                        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
                                            <h4 class="widget-thumb-heading">Opportunities</h4>
                                            <div class="widget-thumb-wrap">
                                                <i class="widget-thumb-icon bg-green">@ViewBag.OpportunitiesNumber</i>
                                                <div class="widget-thumb-body">
                                                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value=""></span> <h5 style="padding: 18px;">Opportunities</h5>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END WIDGET THUMB -->
                                    </div>
                                    <div class="col-md-4">
                                        <!-- BEGIN WIDGET THUMB -->
                                        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
                                            <h4 class="widget-thumb-heading">Opportunities Task</h4>
                                            <div class="widget-thumb-wrap">
                                                <i class="widget-thumb-icon bg-red ">@ViewBag.OpportunitiesTaskNumber</i>
                                                <div class="widget-thumb-body d-flex">
                                                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value=""></span> <h5 style="padding: 18px;">Opportunities Task</h5>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END WIDGET THUMB -->
                                    </div>
                                    <div class="col-md-4">
                                        <!-- BEGIN WIDGET THUMB -->
                                        <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 bordered">
                                            <h4 class="widget-thumb-heading">Projects</h4>
                                            <div class="widget-thumb-wrap">
                                                <i class="widget-thumb-icon bg-purple">@ViewBag.ProjectsNumber</i>
                                                <div class="widget-thumb-body">
                                                    <span class="widget-thumb-body-stat" data-counter="counterup" data-value=""></span> <h5>Projects</h5>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END WIDGET THUMB -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tools"></div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    jQuery(document).ready(function () {

    });


</script>


